<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:id="@+id/idCell">

    <TextView
        android:id="@+id/callNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:text="name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idPhoneNumberCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorBlack"
        android:text="phone_number:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/callNameId" />

    <TextView
        android:id="@+id/idDisplayNameCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorBlack"
        android:text="name_space"
        app:layout_constraintStart_toEndOf="@+id/callNameId"
        app:layout_constraintTop_toTopOf="@+id/callNameId" />

    <TextView
        android:id="@+id/idDisplayPhoneCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="phone_space"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/idPhoneNumberCell"
        app:layout_constraintTop_toTopOf="@+id/idPhoneNumberCell" />

    <TextView
        android:id="@+id/idDisplayIdCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorBlack"
        android:text="id_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/idDisplayNameCell" />

    <TextView
        android:id="@+id/idCellId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorBlack"
        android:text="id:"
        app:layout_constraintEnd_toStartOf="@+id/idDisplayIdCell"
        app:layout_constraintTop_toTopOf="@+id/idDisplayIdCell" />
</androidx.constraintlayout.widget.ConstraintLayout>